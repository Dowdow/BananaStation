{% extends "::user.html.twig" %}
{% block body %}
    <div class="content">
        <h2 class="content-title">Gestion de compte</h2>

        {{ form_start(formPass, {'method': 'POST', 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Changer de mot de passe</h3>
        <div class="form-group">
            <label class="control-label">Ancien mot de passe</label>
            {{ form_widget(formPass.apassword, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <label>Nouveau mot de passe</label>
            {{ form_widget(formPass.npassword, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <input type="submit" class="bouton" name="password" value="Changer le mot de passe"/>
        </div>
        {{ form_end(formPass) }}

        {{ form_start(formEmail, {'method': 'POST', 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Changer d'adresse email</h3>
        <div class="form-group">
            <label class="control-label">Ancienne adresse email</label>
            {{ form_widget(formEmail.aemail, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <label class="control-label">Nouvelle adresse email</label>
            {{ form_widget(formEmail.nemail, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <input type="submit" class="bouton" name="email" value="Changer l'adresse email"/>
        </div>
        {{ form_end(formEmail) }}

        <form method="post" class="form-horizontal">
            <h3>Supprimer le compte</h3>
            <div class="form-group">
                <label for="erase" class="control-label">Confirmez en saisissant "EFFACER" : </label>
                <input id="erase" class="form-control" type="text" name="erase"/>
            </div>
            <div class="form-group">
                <input type="submit" class="bouton" name="delete" value="Supprimer le compte"/>
            </div>
            <p>Attention ! Supprimer votre compte est irreversible. Toutes les données personnelles que vous
                avez fourni seront supprimées. Tous les plusmes, moinsmes et commentaires vous
                concernant seront également supprimés.</p>
        </form>
    </div>
{% endblock %}