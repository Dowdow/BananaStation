{% extends "core.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/core/form.css') }}"/>
{% endblock %}

{% block body %}
    <section>
        <h2>Suppression d'un projet</h2>

        <form method="post">
            <p>Êtes vous sûr de vouloir supprimer le projet "{{ project.nom }}" ?</p>
            <input type="submit" value="Supprimer"/>
        </form>
    </section>
{% endblock %}